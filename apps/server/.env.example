# Production Environment Variables for Backend
# Copy this to .env and fill in the values

# Database - PostgreSQL connection string from Railway
DATABASE_URL=postgresql://user:password@host:5432/instacom

# JWT Secrets - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_32_CHAR_SECRET
REFRESH_SECRET=REPLACE_WITH_32_CHAR_SECRET

# Server Config
NODE_ENV=production
PORT=3000

# CORS - Your frontend URL
ALLOWED_ORIGINS=https://your-app.vercel.app

# Optional: Enable logging
LOG_LEVEL=info
